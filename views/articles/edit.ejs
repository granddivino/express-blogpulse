<form action="/articles/<%= article.id %>/?_method=PUT" method="POST">
    <input type="hidden" name="id" value="<%= article.id %>">
    
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" name="title" value="<%=article.title %>" required>
    </div>

    <div class="form-group">
        <label for="title">Author:</label>
        <input type="hidden" class="form-control" name="author" value="<%=article.authorId %>" required>
        <input type="text" class="form-control" name="author" value="<%=article.author.firstName %> <%=article.author.lastName %>" disabled>
    </div>

    <div class="form-group">
      <label for="content">Content:</label>
      <textarea type="text" class="form-control" name="content" required><%= article.content %></textarea>
    </div>

    <input type="submit" class="btn btn-primary">
  </form> 